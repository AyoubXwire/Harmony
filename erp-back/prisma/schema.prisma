generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int             @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String          @unique
  phone      String          @unique
  password   String
  postId     Int             @default(1)
  roleId     Int             @default(1)
  post       UserPost        @relation(fields: [postId], references: [id])
  role       UserRole        @relation(fields: [roleId], references: [id])
  Projects   ProjectAssign[]
  timesheets TimeSheet[]
}

model UserRole {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model UserPost {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Project {
  id         Int             @id @default(autoincrement())
  name       String
  price      Int
  startDate  DateTime
  endDate    DateTime
  clientId   Int
  client     Client          @relation(fields: [clientId], references: [id])
  users      ProjectAssign[]
  timesheets TimeSheet[]
}

model ProjectAssign {
  id        Int     @id @default(autoincrement())
  userId    Int
  projectId Int
  user      User    @relation(fields: [userId], references: [id])
  project   Project @relation(fields: [projectId], references: [id])
}

model TimeSheet {
  id        Int      @id @default(autoincrement())
  date      DateTime
  time      Int
  comment   String
  userId    Int
  projectId Int
  user      User     @relation(fields: [userId], references: [id])
  project   Project  @relation(fields: [projectId], references: [id])
}

model Client {
  id       Int             @id @default(autoincrement())
  name     String
  projects Project[]
  contacts ClientContact[]
}

model ClientContact {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  phone     String @unique
  clientId  Int
  client    Client @relation(fields: [clientId], references: [id])
}
