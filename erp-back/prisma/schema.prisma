generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id          Int         @id @default(autoincrement())
    firstName   String
    lastName    String
    email       String      @unique
    phone       String      @unique
    avatar      String
    password    String
    post        UserPost    @relation(fields: [postId], references: [id])
    postId      Int
    timesheets  TimeSheet[]
    projects    Project[]
}

model UserPost {
    id          Int         @id @default(autoincrement())
    name        String
    users       User[]
}

model Project {
    id          Int         @id @default(autoincrement())
    name        String
    price       Int
    startDate   DateTime
    endDate     DateTime
    client      Client      @relation(fields: [clientId], references: [id])
    clientId    Int
    timesheets  TimeSheet[]
    users       User[]
}

model TimeSheet {
    id          Int         @id @default(autoincrement())
    date        DateTime
    time        Int
    comment     String
    user        User        @relation(fields: [userId], references: [id])
    userId      Int
    project     Project     @relation(fields: [projectId], references: [id])
    projectId   Int
}

model Client {
    id          Int         @id @default(autoincrement())
    name        String
    projects    Project[]
    contacts    ClientContact[]
}

model ClientContact {
    id          Int         @id @default(autoincrement())
    firstName   String
    lastName    String
    email       String      @unique
    phone       String      @unique
    client      Client      @relation(fields: [clientId], references: [id])
    clientId    Int
}
